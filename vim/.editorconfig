[*]
# We recommend you to keep these unchanged
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

indent_style = space
indent_size = 4

root = true

[**.js]
indent_style = space
indent_size = 2
indent_level = 0
trim_trailing_whitespace = 1
insert_final_newline = 1
space_before_conditional = 1 
brace_style = collapse
indent_with_tabs = 0 
jslint_happy = 0 
keep_array_indentation = 0 
keep_function_indentation = 0 
max_preserve_newlines = 2 
preserve_newlines = 1 
eval_code = 0 
unescape_strings = 0 
wrap_line_length = 0

[**.css]
indent_style = space
indent_size = 2

[**.html]
indent_style = space
indent_size = 2
max_char = 78
brace_style = expand

[**.php]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = false
